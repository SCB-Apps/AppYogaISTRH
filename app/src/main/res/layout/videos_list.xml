<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ContenedorCardViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ImagenVideo"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ver_video" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TituloVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="TÃ­tulo"
                        android:textColor="#FF039CAF"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTituloVideo"
                        android:layout_width="240dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="90dp"
                        android:text="- -"
                        android:fontFamily="@font/archivo_narrow"
                        android:textColor="#FF039CAF"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/DuracionVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Dificultad:"
                        android:textColor="#FF039CAF"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDuracionVideo"
                        android:layout_width="223dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="90dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="- -"
                        android:textColor="#FF039CAF"
                        android:textSize="17sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/_4b3b_ImageButton1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@android:color/transparent"
                    android:text="Registrate"
                    app:srcCompat="@drawable/ic_adelante" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>